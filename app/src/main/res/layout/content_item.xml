<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="100dp"
        android:layout_height="140dp"
        android:background="@color/white"
        android:layout_marginTop="15dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY"
        android:src="@drawable/game_assassins_creed" />
    <TextView
        android:id="@+id/item_label"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_image"
        android:layout_toEndOf="@id/item_image"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Assassins Creed Black Flag"
        android:textSize="10pt"
        android:textAlignment="center"/>
    <TextView
        android:id="@+id/item_cost_label"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_label"
        android:layout_toEndOf="@id/item_image"
        android:layout_toRightOf="@id/item_image"
        android:textAlignment="center"
        android:text="Cost:"
        android:textSize="8pt"/>
    <TextView
        android:id="@+id/item_cost"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_label"
        android:textAlignment="center"
        android:layout_toEndOf="@id/item_cost_label"
        android:layout_toRightOf="@id/item_cost_label"
        android:textSize="8pt"/>
    <TextView
        android:id="@+id/item_currency"
        android:layout_width="50dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/item_label"
        android:textAlignment="center"
        android:layout_toEndOf="@id/item_cost"
        android:layout_toRightOf="@id/item_cost"
        android:textSize="8pt"/>

    <ImageButton
        android:id="@+id/item_subtract"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/item_cost_label"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/item_image"
        android:layout_toRightOf="@id/item_image"
        android:scaleType="fitXY"
        android:src="@drawable/minus"
        android:background="@color/white"/>
    <EditText
        android:id="@+id/item_amount"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/item_cost_label"
        android:layout_toRightOf="@id/item_subtract"
        android:layout_toEndOf="@id/item_subtract"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:inputType="number"
        android:text="5"
        android:textAlignment="center"
        android:textSize="14pt"
        />

    <ImageButton
        android:id="@+id/item_add"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/item_cost_label"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_toEndOf="@id/item_amount"
        android:layout_toRightOf="@id/item_amount"
        android:background="@color/white"
        android:scaleType="fitXY"
        android:src="@drawable/plus" />
    <Button
        android:id="@+id/item_order"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/item_amount"
        android:text="Order"
        android:textSize="15pt"/>
    <TextView
        android:id="@+id/tag_1_name"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/item_order"
        android:text="Year"
        android:textAlignment="center"
        android:textSize="7pt"/>
    <TextView
        android:id="@+id/tag_2_name"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/tag_1_name"
        android:text="Genre"
        android:textAlignment="center"
        android:textSize="7pt"/>
    <TextView
        android:id="@+id/tag_3_name"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/tag_2_name"
        android:text="Publisher"
        android:textAlignment="center"
        android:textSize="7pt"/>
    <TextView
        android:id="@+id/tag_1"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tag_1_name"
        android:layout_toRightOf="@id/tag_1_name"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/item_order"
        android:text="2013"
        android:textSize="7pt"/>
    <TextView
        android:id="@+id/tag_2"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tag_2_name"
        android:layout_toRightOf="@id/tag_2_name"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/tag_1_name"
        android:text="Action"
        android:textSize="7pt"/>
    <TextView
        android:id="@+id/tag_3"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/tag_3_name"
        android:layout_toRightOf="@id/tag_3_name"
        android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
        android:layout_marginStart="@dimen/nav_header_vertical_spacing"
        android:layout_below="@id/tag_2_name"
        android:text="Ubisoft"
        android:textSize="7pt"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tag_3"
        android:text="The game features three main cities; Havana, Kingston, and Nassau, which reside under Spanish, British, and pirate influence, respectively. The game also features 50 other individual locations to explore, including atolls, sea forts, Mayan ruins, sugar plantations, and underwater shipwrecks, with a 60/40 balance between land and naval exploration.[6] Assassin's Creed IV has a more open world feel, with missions similar to those found in Assassin's Creed, as well as fewer restrictions for the player. "/>
    </RelativeLayout>
</ScrollView>
