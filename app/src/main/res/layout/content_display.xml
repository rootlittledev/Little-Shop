<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/item_1_display"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:scaleType="fitXY"
            android:src="@drawable/game_assassins_creed" />
        <TextView
            android:id="@+id/item_1_display_label"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_toRightOf="@id/item_1_display"
            android:layout_toEndOf="@id/item_1_display"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Assassins Creed Black Flag"
            android:textSize="10pt"
            android:textAlignment="center"/>

        <ImageButton
            android:id="@+id/item_1_display_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_1_display_label"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_marginStart="25dp"
            android:layout_toEndOf="@id/item_1_display"
            android:layout_toRightOf="@id/item_1_display"
            android:scaleType="fitXY"
            android:src="@drawable/minus"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/item_1_display_amount"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_below="@id/item_1_display_label"
            android:layout_toRightOf="@id/item_1_display_minus"
            android:layout_toEndOf="@id/item_1_display_minus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:text="5"
            android:textAlignment="center"
            android:textSize="14pt"
            />

        <ImageButton
            android:id="@+id/item_1_display_plus"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_1_display_label"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_toEndOf="@id/item_1_display_amount"
            android:layout_toRightOf="@id/item_1_display_amount"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/plus" />
        <Button

            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_toRightOf="@id/item_1_display"
            android:layout_toEndOf="@id/item_1_display"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/item_1_display_amount"
            android:text="Order"
            android:textSize="15pt"/>
    </RelativeLayout>

</RelativeLayout>