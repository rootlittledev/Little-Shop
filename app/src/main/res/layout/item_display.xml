<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:background="@color/white"
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/game_assassins_creed" />
        <TextView
            android:id="@+id/item_label"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/item_image"
            android:layout_toEndOf="@id/item_image"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Assassins Creed Black Flag"
            android:textSize="10pt"
            android:textAlignment="center"/>
        <TextView
            android:id="@+id/item_cost_label"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/item_label"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:textAlignment="center"
            android:text="Cost:"
            android:textSize="8pt"/>
        <TextView
            android:id="@+id/item_cost"
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/item_label"
            android:textAlignment="center"
            android:layout_toEndOf="@id/item_cost_label"
            android:layout_toRightOf="@id/item_cost_label"
            android:textSize="8pt"
            android:text="360"/>
        <TextView
            android:id="@+id/item_currency"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/item_label"
            android:textAlignment="center"
            android:layout_toEndOf="@id/item_cost"
            android:layout_toRightOf="@id/item_cost"
            android:textSize="8pt"
            android:text="Uah"/>

        <ImageButton
            android:id="@+id/item_subtract"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_cost_label"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/item_image"
            android:layout_toRightOf="@id/item_image"
            android:scaleType="fitXY"
            android:src="@drawable/minus"
            android:background="@color/white"/>
        <EditText
            android:id="@+id/item_amount"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_below="@id/item_cost_label"
            android:layout_toRightOf="@id/item_subtract"
            android:layout_toEndOf="@id/item_subtract"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:inputType="number"
            android:text="5"
            android:textAlignment="center"
            android:textSize="14pt"
            />

        <ImageButton
            android:id="@+id/item_add"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/item_cost_label"
            android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
            android:layout_marginStart="@dimen/nav_header_vertical_spacing"
            android:layout_toEndOf="@id/item_amount"
            android:layout_toRightOf="@id/item_amount"
            android:background="@color/white"
            android:scaleType="fitXY"
            android:src="@drawable/plus" />
        <Button
            android:id="@+id/item_order"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/item_image"
            android:layout_toEndOf="@id/item_image"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_below="@id/item_amount"
            android:text="Order"
            android:textSize="15pt"/>
    </RelativeLayout>
</RelativeLayout>